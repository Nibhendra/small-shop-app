# Copy this file to .env for local testing.
# Never commit .env

# Server
PORT=8080

# Twilio WhatsApp
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
# Example: whatsapp:+14155238886 (Twilio Sandbox)
TWILIO_WHATSAPP_FROM=

# Firebase Admin service account (for custom tokens + Firestore OTP storage)
# IMPORTANT: FIREBASE_PRIVATE_KEY must keep line breaks. Usually you paste it with \n.
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Optional: Firestore collection name
OTP_COLLECTION=otp_requests
